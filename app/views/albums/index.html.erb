<p id="notice"><%= notice %></p>

<h1>Listing Albums</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Username</th>
      <th>Api key</th>
      <th>Network</th>
      <th>Datacenter</th>
      <th>Container</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.username %></td>
        <td><%= album.api_key %></td>
        <td><%= album.network %></td>
        <td><%= album.datacenter %></td>
        <td><%= album.container %></td>
        <td><%= album.user %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

