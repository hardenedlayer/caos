<h1><%= @album.title %></h1>
<div class="caos album list" id="">
  <div class="caos album discription">
    <%= @album.datacenter %> / <%= @album.container %> / <%= @album.network %>
    (<%= @album.user.name %>)
  </div>
  <div class="row">
    <% (1..3).each do %>
    <% @items.each do |item| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag item['src'] %>
        <div class="caption">
          <%= item['filename'] %>
          <%= number_with_delimiter item['bytes'], delimiter: ',' %> bytes
        </div>
        <!--
          <%= item['meta_album'] %>
          <%= item['etag'] %>
          <%= item['last_modified'] %>
        -->
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
